// 文章内链接文本样式
.post-body p a {
  color: #0593d3; 
    border-bottom: none; 
    border-bottom: 1px solid #0593d3; 
    font-weight: bold;
    &:hover { 
        color: #fc6423; 
        border-bottom: none; 
        border-bottom: 1px solid #fc6423; 
        font-weight: bold;
    } 
}

code {
    padding: 2px;
    world-wrap: break-word;
    color: red;
    background: #edf0f5;
    border-radius:3px;
    font-size: 16px;
}
